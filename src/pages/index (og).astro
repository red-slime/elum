---
import "../styles/index.scss";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>
		<title>Elum | Training + Development</title>
	</head>
	<body>
		<div class="gradient"></div>
		<section class="header" id="header">
			<img src="elum_logo_trimmed.png" alt="elum-badge" />
		</section>
		<section id="mobile-header">
			<img id="mobile-logo-sticky" src="elum.svg" alt="elum-badge" />
		</section>
		<section class="splash">
			<div class="splash-container">
				<div class="splash-text">
					<h1 class="text-desktop">
						el<img src="elum-u.png" alt="partial-elum-logo" />m is a virtual <br
						/> training development <br /> and deployment <br />
						platform.
					</h1>
					<h1 class="text-tablet">
						el<img src="elum-u.png" alt="partial-elum-logo" />m is a virtual <br
						/> training development <br /> and deployment <br />
						platform.
					</h1>
					<img id="mobile-logo-marker" src="elum.svg" alt="full-elum-logo" />
					<!-- <h1 class="text-mobile">
						is a virtual
						<br /> training <br /> development <br /> and deployment <br />
						platform.
					</h1> -->
					<h1 id="logo-line">is a virtual</h1>
					<h1 class="text-mobile text-fade">training</h1>
					<h1 class="text-mobile text-fade">development</h1>
					<h1 class="text-mobile text-fade">and deployment</h1>
					<h1 class="text-mobile text-fade">platform.</h1>
					<h2 class="text-fade">
						it teaches you to do <br /> a complicated thing clearly.
					</h2>
				</div>
				<div class="icon-container">
					<img
						class="splash-scroll"
						src="scroll-down.svg"
						alt="scroll-down-icon"
					/>
				</div>
			</div>
		</section>
		<section class="information">
			<div class="information-container">
				<div class="knowledge">
					<div class="knowledge-text">
						<h1>knowledge is a right.</h1>
						<h1>stay eluminated.</h1>
						<div class="contact">
							<div class="email">
								<img src="envelope.svg" alt="email-icon" />
								<a href="mailto:info@elumplatform.com">info@elumplatform.com</a>
							</div>
							<img src="elum.svg" alt="elum-badge" />
							<span class="glass" id="launching">launching 2024</span>
						</div>
					</div>
					<div class="knowledge-buttons">
						<a href="#" class="button blue-button">watch the video</a>
						<a href="#" class="button clear-button">view the white paper</a>
					</div>
				</div>
				<div class="cards-container">
					<div class="card">
						<span class="asterisk">*</span>
						<h2>learn anywhere, anytime, step-by-step</h2>
					</div>

					<div class="card">
						<span class="asterisk">*</span>
						<h2>save money training yourself, and others, up</h2>
					</div>
					<div class="card">
						<span class="asterisk">*</span>
						<h2>get efficient at a new skill quickly & safely</h2>
					</div>

					<div class="card">
						<span class="asterisk">*</span>
						<h2>visualize it all in precise 3D & video</h2>
					</div>
				</div>
				<div class="mobile-info-container">
					<h1>knowledge is a right.</h1>
					<h1>stay eluminated.</h1>
					<div class="email">
						<img src="envelope.svg" alt="email-icon" />
						<a href="mailto:info@elumplatform.com">info@elumplatform.com</a>
					</div>
				</div>
			</div>
		</section>
		<script>
			window.addEventListener("DOMContentLoaded", (event) => {
				// Get the necessary elements from the DOM
				var logoMarker = document.getElementById("mobile-logo-marker");
				var logoSticky = document.getElementById("mobile-logo-sticky");
				var logoLine = document.getElementById("logo-line");
				var textFadeElements = document.querySelectorAll(".text-fade");

				// Listen for scroll events on the window
				window.onscroll = function () {
					// Get the current position of the elements
					var logoMarkerRect = logoMarker.getBoundingClientRect();
					var logoStickyRect = logoSticky.getBoundingClientRect();
					var logoLineRect = logoLine.getBoundingClientRect();

					// If the logo marker has scrolled to or above the top of the viewport
					if (logoMarkerRect.top <= logoStickyRect.top) {
						// Hide the logo marker and show the logo sticky
						logoMarker.style.opacity = "0";
						logoSticky.style.visibility = "visible";
					} else {
						// Show the logo marker and hide the logo sticky
						logoMarker.style.opacity = "1";
						logoSticky.style.visibility = "hidden";
					}

					// If the logo line has scrolled to or above the top of the logo sticky (offset by 5px)
					if (logoLineRect.top <= logoStickyRect.top - 5) {
						// Fade out the logo line as it moves up
						var opacity = Math.max(
							1 - (logoStickyRect.top - 5 - logoLineRect.top) / 5,
							0
						);
						logoLine.style.opacity = opacity.toString();
					} else {
						// Show the logo line fully when it is below the top of the logo sticky (offset by 5px)
						logoLine.style.opacity = "1";
					}

					// Loop through all elements with the class .text-fade
					for (var i = 0; i < textFadeElements.length; i++) {
						var textFadeRect = textFadeElements[i].getBoundingClientRect();

						// If the text element has scrolled to or above the bottom of the logo sticky (offset by 10px)
						if (textFadeRect.top <= logoStickyRect.bottom + 10) {
							// Fade out the text as it moves up
							var opacity = Math.max(
								1 - (logoStickyRect.bottom - textFadeRect.top + 10) / 10,
								0
							);
							textFadeElements[i].style.opacity = opacity.toString();
						} else {
							// Show the text fully when it is below the bottom of the logo sticky (offset by 10px)
							textFadeElements[i].style.opacity = "1";
						}
					}
				};
			});
		</script>
	</body>
</html>
